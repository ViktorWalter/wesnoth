#!/bin/bash
cd "$(dirname "$0")"

sudo apt install \
   libboost-filesystem-dev \
   libboost-locale-dev \
   libboost-iostreams-dev \
   libboost-random-dev \
   libboost-regex-dev \
   libboost-program-options-dev \
   libboost-system-dev \
   libsdl2-dev \
   libsdl2-image-dev \
   libsdl2-mixer-dev \
   libfontconfig1-dev \
   libcairo-dev \
   libpango1.0-dev \
   libvorbis-dev  \
   libbz2-dev  \
   libz-dev  \
   libcrypto++-dev \
   libdbus-1-dev &&

rm -rf ./build
mkdir build && cd build
cmake .. -DCMAKE_BUILD_TYPE=Release && 
make -j${NPROC}

